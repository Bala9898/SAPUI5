<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:f="sap.ui.layout.form"
		xmlns:core="sap.ui.core">
	<ResponsivePopover
			id="detailsPopover"
			title="{Licenseplate}"
			class="sapUiResponsivePadding--header"
			placement="Auto">
		<endButton>
			<Button id="_IDGenButton2" text="Cancel" press="handleCancel"/>
		</endButton>
		<f:SimpleForm
				id="appointmentEditForm"
				editable="false"
				layout="ResponsiveGridLayout"
				singleContainerFullSize="false">
			<Label id="_IDGenLabel1" text="Honnan" labelFor="Zfrom"/>
			<Text id="_IDGenText1"
					text="{ path: 'Zfrom', formatter: '.formatAddressName' }"/>
			<Label id="_IDGenLabel2" text="Hova" labelFor="Zto"/>
			<Text id="_IDGenText2"
					text="{ path: 'Zto', formatter: '.formatAddressName' }"/>
			<Label id="_IDGenLabel3" text="Távolság" labelFor="Distance"/>
			<Text id="_IDGenText3"
					text="{Distance} km"/>
			<Label id="_IDGenLabel4" text="Költség" labelFor="Cost"/>
			<Text id="_IDGenText4"
					text="{ parts: [ { path: 'Cost' }, { path: 'CostCurrency' }], formatter: '.formatHufPrice' }"/>
			<Label id="_IDGenLabel"
					text="Jegyzet az útról"
					labelFor="Note"/>
			<Text id="_IDGenText" text="{Notes}"/>
		</f:SimpleForm>
	</ResponsivePopover>
</core:FragmentDefinition>